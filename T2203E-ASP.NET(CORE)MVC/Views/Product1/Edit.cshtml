@model T2203E_ASP.NET_CORE_MVC.Entities.Product
@{

}
<h1>Edit product: @Model.Name</h1>
<form action="~/Product1/Edit" method="post">
    ID:<br>
    <input type="hidden" name="id" value="@Model.Id"><br>
    Name:<br>
    <input type="text" name="Name" value="@Model.Name"><br />
    Price:<br>
    <input type="text" name="Price" value="@Model.Price"><br />
    Thumbnail:<br>
    <input type="text" name="thumbnail" value="@Model.thumbnail"></br>
    <button type="submit">Submit</button>
</form>
